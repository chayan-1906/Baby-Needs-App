<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
	android:id="@+id/cardView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#9ab3f5"
	android:padding="12dp">

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="15dp">

	    <TextView
		android:id="@+id/txtItemName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:text="@string/app_name"
		android:textStyle="bold"
		android:textSize="20sp" />

	    <TextView
		android:id="@+id/txtItemQty"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtItemName"
		android:padding="5dp"
		android:text="@string/app_name"
		android:textStyle="bold"
		android:textSize="20sp" />

	    <TextView
		android:id="@+id/txtItemColor"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtItemQty"
		android:padding="5dp"
		android:text="@string/app_name"
		android:textStyle="bold"
		android:textSize="20sp" />

	    <TextView
		android:id="@+id/txtItemSize"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtItemColor"
		android:padding="5dp"
		android:text="@string/app_name"
		android:textStyle="bold"
		android:textSize="20sp" />

	    <TextView
		android:id="@+id/txtItemDate"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/txtItemSize"
		android:padding="5dp"
		android:text="@string/app_name"
		android:textStyle="italic"
		android:textSize="20sp" />

	    <TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/txtItemDate"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		android:gravity="end"
		android:orientation="horizontal">

		<Button
		    android:id="@+id/btnEdit"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_marginRight="15dp"
		    android:layout_marginEnd="15dp"
		    android:background="@android:drawable/ic_menu_edit"/>

		<Button
		    android:id="@+id/btnDelete"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:layout_marginRight="15dp"
		    android:layout_marginEnd="15dp"
		    android:background="@android:drawable/ic_delete"/>

	    </TableRow>

	</RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>